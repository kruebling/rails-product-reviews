
  <div class='card card-body'>
    <h2>Product: <%= @product.name %></h2>
    <hr>
    <h3>Country: <%= @product.country %></h3>
    <h3>Cost: $<%= @product.cost %>.00</h3>
    <h3>Featured: <%= @product.featured %></h3>
    <p><%= link_to "Edit", edit_product_path(@product) %></p>
    <p><%= link_to "Delete", product_path(@product),
      :data => {:confirm => "You sure?",
      :method => "delete"} %>
    </p>
    <p><%= link_to "Add a Review", new_product_review_path(@product) %></p>
    <p><%= link_to "Return to Products List", products_path %></p>
  </div><br>

  <div class='card'>
    <% if @product.reviews.any? %>
      <h2 class='card-header'>Here are the reviews for this product:</h2>

      <div class='card-body'>
        <% @product.reviews.each do |review| %>
          <p>Author: <%= review.author %></p>
          <p>Review: <%= review.content_body %></p>
          <p>Rating: <%= review.rating %></p>
          <p><%= link_to "Edit", edit_product_review_path(@product, review) %></p>
          <p><%= link_to "Delete", product_review_path(@product, review),
            :data => {:confirm => "Are you sure?",
            :method => "delete"} %>
          </p>
        <hr>
        <% end %>
        <% else %>
          <p>There are no reviews yet!</p>
        <% end %>
      </div>
  </div>
