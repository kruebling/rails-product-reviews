<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.label :cost %>(2 digit)
  <%= f.text_field :cost %>
  <%= f.label :featured %>(boolean)
  <%= f.text_field :featured %>
  <%= f.button :submit, :class => 'btn btn-info' %>
<% end %>
